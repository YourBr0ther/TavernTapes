{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist/main",
    "rootDir": "src/main",
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules"]
} 