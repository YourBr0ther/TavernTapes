{
  "name": "taverntapes",
  "version": "0.1.0",
  "description": "A modern recording application for D&D sessions",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npm run build:electron\" \"npm run build:preload\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && npm run build:electron && npm run build:preload && electron-builder",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "YourBr0ther",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "recordrtc": "^5.6.2",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.17.30",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@types/recordrtc": "^5.6.14",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.1.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "glob": "^10.3.10",
    "lru-cache": "^10.2.0",
    "msw": "^2.2.1",
    "postcss": "^8.4.35",
    "typescript": "^5.3.3",
    "vite": "^6.3.1",
    "vite-node": "^3.1.1",
    "vitest": "^3.1.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.taverntapes.app",
    "productName": "TavernTapes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
